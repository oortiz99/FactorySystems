<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/errorFila"
    android:background="@drawable/error_background"
    android:backgroundTint="@color/red"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">

    <View
        android:id="@+id/viewSelected"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/grdl"
        app:layout_constraintTop_toTopOf="@id/grdl"
        app:layout_constraintRight_toRightOf="@id/grdl"
        app:layout_constraintBottom_toBottomOf="@id/grdl"
        ></View>

    <GridLayout
        android:id="@+id/grdl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txvMaquina"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:text="KM 2000"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/txvDateTime"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:text="AVUI\n13:41"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="right"
            android:textSize="25dp"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>