<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navegacio_principal"
    app:startDestination="@id/activeErrorsFragment">

    <fragment
        android:id="@+id/activeErrorsFragment"
        android:name="com.example.factorysistemsapp.fragments.ActiveErrorsFragment"
        android:label="fragment_active_errors"
        tools:layout="@layout/fragment_active_errors" >
        <action
            android:id="@+id/action_activeErrorsFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_activeErrorsFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.factorysistemsapp.fragments.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_activeErrorsFragment"
            app:destination="@id/activeErrorsFragment" />
        <action
            android:id="@+id/action_detailsFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.factorysistemsapp.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_historyFragment_to_activeErrorsFragment"
            app:destination="@id/activeErrorsFragment" />
        <action
            android:id="@+id/action_historyFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/loadScreenFragment"
        android:name="com.example.factorysistemsapp.fragments.LoadScreenFragment"
        android:label="LoadScreenFragment" >
        <action
            android:id="@+id/action_loadScreenFragment_to_activeErrorsFragment"
            app:destination="@id/activeErrorsFragment" />
    </fragment>
</navigation>